{
  "title": "双击 Shift",
  "rules": [
    {
      "description": "双击左侧 Shift 大写锁定",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
                ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "left_shift pressed",
              "value": 1
            }
          ]
        },

        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
                ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "left_shift pressed",
                "value": 1
              }
            },
            {
              "key_code": "left_shift"
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "left_shift pressed",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "left_shift pressed",
                  "value": 0
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
