{
	"title": "大写锁定贱",
	"rules": [
    {
      "description": "大写锁定键短按 Escape，长按 大写锁定",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
            }
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          },
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
	]
}
